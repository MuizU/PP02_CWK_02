<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity"
    android:id="@+id/settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_layout" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/notificationsText"
        app:layout_constraintEnd_toStartOf="@+id/inviteFriendsText"
        app:layout_constraintStart_toStartOf="@+id/inviteFriendsText"
        app:layout_constraintTop_toBottomOf="@+id/notificationsText">

        <TextView
            android:id="@+id/inviteFriendsText"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="220dp"
            android:clickable="false"
            android:gravity="center"
            android:textColor="@color/colorIndivateTab"
            android:backgroundTint="@color/colorPrimary"
            android:text="Invite Friends"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationsText" />

        <TextView
            android:id="@+id/privacyText"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Privacy"
            android:textColor="@color/colorIndivateTab"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/inviteFriendsText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationsText" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="153dp"
            android:layout_height="0dp"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="76dp"
            app:layout_constraintBottom_toTopOf="@+id/notificationsText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/notificationsText"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="59dp"
            android:clickable="false"
            android:gravity="center"
            android:textColor="@color/colorIndivateTab"
            android:backgroundTint="@color/colorPrimary"
            android:text="Notifications"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/inviteFriendsText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_barSettings"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>